{
  "name": "clean-blog",
  "version": "1.0.0",
  "description": "A clean, responsive blog built with Node.js, Express, and MongoDB",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "seed": "node scripts/seedDatabase.js",
