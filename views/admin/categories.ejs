<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Categories - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <%- include('../layouts/navbar') %>

        <div class="container mt-5">
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <h1 class="mb-4">Manage Categories</h1>

                    <!-- Add New Category Form -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">Add New Category</h5>
                        </div>
                        <div class="card-body">
                            <form action="/admin/categories" method="POST">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <input type="text" name="name" class="form-control"
                                            placeholder="Category name (e.g., ArithmÃ©tique)" required>
                                    </div>
                                    <div class="col-md-4">
                                        <select name="parent" class="form-select">
                                            <option value="">No Parent (Top Level)</option>
                                            <% categories.forEach(cat=> { %>
                                                <% if (!cat.parent) { %>
                                                    <option value="<%= cat._id %>">
                                                        <%= cat.name %>
                                                    </option>
                                                    <% } %>
                                                        <% }) %>
                                        </select>
                                    </div>
                                    <div class="col-md-2">
                                        <button type="submit" class="btn btn-primary w-100">Add</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Categories List -->
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Existing Categories</h5>
                        </div>
                        <div class="card-body">
                            <% if (categories.length===0) { %>
                                <p class="text-muted">No categories yet. Add one above!</p>
                                <% } else { %>
                                    <div class="list-group">
                                        <% categories.forEach(category=> { %>
                                            <div
                                                class="list-group-item d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="mb-0">
                                                        <%= category.name %>
                                                            <% if (category.parent) { %>
                                                                <span class="badge bg-secondary ms-2"
                                                                    style="font-size: 0.7em;">Child of <%=
                                                                        category.parent.name %></span>
                                                                <% } else { %>
                                                                    <span class="badge bg-info text-dark ms-2"
                                                                        style="font-size: 0.7em;">Parent</span>
                                                                    <% } %>
                                                    </h6>
                                                    <small class="text-muted">Created: <%= new
                                                            Date(category.createdAt).toLocaleDateString() %></small>
                                                </div>
                                                <form action="/admin/categories/<%= category._id %>/delete"
                                                    method="POST" class="d-inline"
                                                    onsubmit="return confirm('Are you sure you want to delete this category? Posts with this category will not be affected.');">
                                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                </form>
                                            </div>
                                            <% }) %>
                                    </div>
                                    <% } %>
                        </div>
                    </div>

                    <div class="mt-4">
                        <a href="/admin/dashboard" class="btn btn-secondary">Back to Dashboard</a>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>