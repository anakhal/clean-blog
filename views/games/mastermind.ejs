<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Google AdSense -->
    <% if (typeof showAds !== 'undefined' && showAds === true) { %>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8275998168885235"
         crossorigin="anonymous"></script>
    <% } %>
    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Code Breaker - Mathematiques-Bac</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css">
    <!-- Clean Blog CSS -->
    <link href="/css/styles.css" rel="stylesheet">
    <!-- Mastermind Game CSS -->
    <link rel="stylesheet" href="/games/mastermind/style.css">
    <style>
        /* Navbar styling */
        #mainNav {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            background-color: white !important;
            border-bottom: 1px solid #dee2e6;
        }

        #mainNav .navbar-brand,
        #mainNav .nav-link {
            color: #212529 !important;
        }

        #mainNav .nav-link:hover {
            color: #0085A1 !important;
        }

        /* Override pour int√©gration avec clean-blog */
        body {
            padding-top: 76px !important;
            background: linear-gradient(135deg, #2c1810 0%, #4a2c1a 100%) !important;
            margin: 0;
        }

        /* R√©duire la taille max du jeu √† 75% */
        .game-container {
            max-width: 750px !important;
        }

        /* R√©duire la hauteur minimum */
        .game-main {
            min-height: 525px !important;
        }

        /* R√©duire l√©g√®rement la taille des pegs */
        .peg {
            width: 34px !important;
            height: 34px !important;
            margin: 3px !important;
        }

        .color-peg {
            width: 50px !important;
            height: 50px !important;
        }

        /* R√©duire les rang√©es de jeu */
        .game-row {
            height: 50px !important;
            padding: 8px 10px !important;
        }

        .feedback-square {
            width: 56px !important;
            height: 50px !important;
            padding: 5px !important;
        }

        .feedback-hole .feedback-peg {
            width: 11px !important;
            height: 11px !important;
        }

        /* R√©duire les boutons */
        .row-undo-btn,
        .row-submit-btn {
            width: 36px !important;
            height: 36px !important;
            font-size: 1.1em !important;
        }

        /* Ajuster l'espacement */
        .game-main {
            gap: 18px !important;
            padding: 18px !important;
        }

        .game-board {
            padding: 18px !important;
        }

        .control-panel {
            padding: 18px !important;
        }

        /* Ajuster les titres */
        .game-header h1 {
            font-size: 1.6em !important;
        }

        .game-header p {
            font-size: 0.95em !important;
        }
    </style>
</head>
<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WPZ6BNP4"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav" style="background-color: white;">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" href="/" style="color: #212529;">Math√©matiques Bac</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto py-4 py-lg-0">
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/" style="color: #212529;">Exercices</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/games/mastermind" style="color: #0085A1; font-weight: 600;">üéÆ Jeu</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/about" style="color: #212529;">About</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/contact" style="color: #212529;">Contact</a></li>
                    <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/search" style="color: #212529;">Search</a></li>
                    <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/posts/new" style="color: #212529;"><i class="fas fa-plus"></i> Create</a></li>
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/admin/dashboard" style="color: #212529;">Dashboard</a></li>
                    <% } %>
                    <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
                        <li class="nav-item">
                            <a class="nav-link px-lg-3 py-3 py-lg-4" href="#" id="logoutLink" style="color: #212529;">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                            <form id="logoutForm" action="/users/logout" method="post" style="display: none;"></form>
                        </li>
                    <% } else { %>
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/users/login" style="color: #212529;"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                        <li class="nav-item"><a class="nav-link px-lg-3 py-3 py-lg-4" href="/users/register" style="color: #212529;"><i class="fas fa-user-plus"></i> Register</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Google AdSense: Top of Game Page -->
    <% if (typeof showAds !== 'undefined' && showAds === true) { %>
    <div style="text-align: center; margin: 20px auto; max-width: 750px; padding: 10px; background: rgba(255,255,255,0.9); border-radius: 8px;">
        <p style="color: #6c757d; margin-bottom: 5px; font-size: 12px;">Advertisement</p>
        <div style="min-height: 90px; display: flex; align-items: center; justify-content: center; background: #f8f9fa; border-radius: 4px;">
            <span style="color: #6c757d;">AdSense Ad Unit (Game Top)</span>
        </div>
    </div>
    <% } %>
    
    <div class="game-container">
        <header class="game-header">
            <h1>üß© Code Breaker</h1>
            <p>Break the secret code! The computer has chosen 4 colors.</p>
            <div class="game-info">
                <span class="attempts">Attempts: <span id="attempts">0</span>/10</span>
                <button id="new-game-btn" class="btn">New Game</button>
                <button id="help-btn" class="btn help-btn" title="How to Play">‚ùì Help</button>
            </div>
        </header>

        <div class="game-main">
            <!-- Left Panel - Game Board with Feedback -->
            <div class="game-board">
                <!-- Secret code (hidden initially) -->
                <div class="secret-code">
                    <h3>Secret Code:</h3>
                    <div class="code-row" id="secret-code">
                        <div class="peg secret"></div>
                        <div class="peg secret"></div>
                        <div class="peg secret"></div>
                        <div class="peg secret"></div>
                    </div>
                </div>

                <!-- Game area with attempts and feedback -->
                <div class="game-area">
                    <!-- Feedback panels for each row -->
                    <div class="feedback-panels" id="feedback-panels">
                        <!-- Feedback squares will be generated by JavaScript -->
                    </div>

                    <!-- All 10 Game rows for attempts -->
                    <div class="game-rows" id="game-rows">
                        <!-- All 10 rows will be pre-generated by JavaScript -->
                    </div>
                </div>
            </div>

            <!-- Right Panel - Controls -->
            <div class="control-panel">
                <!-- Color palette -->
                <div class="color-palette">
                    <h3>Choose Colors:</h3>
                    <div class="colors">
                        <div class="color-peg red" data-color="red"></div>
                        <div class="color-peg blue" data-color="blue"></div>
                        <div class="color-peg yellow" data-color="yellow"></div>
                        <div class="color-peg green" data-color="green"></div>
                        <div class="color-peg cyan" data-color="cyan"></div>
                        <div class="color-peg purple" data-color="purple"></div>
                    </div>
                </div>

                <!-- Feedback Legend -->
                <div class="feedback-legend">
                    <h3>Feedback Guide:</h3>
                    <div class="legend-item">
                        <div class="legend-pegs">
                            <div class="feedback-peg black"></div>
                        </div>
                        <div class="legend-text">
                            <strong>Black:</strong> Right position
                        </div>
                    </div>
                    <div class="legend-item">
                        <div class="legend-pegs">
                            <div class="feedback-peg white"></div>
                        </div>
                        <div class="legend-text">
                            <strong>White:</strong> Wrong position
                        </div>
                    </div>
                </div>

                <!-- Control buttons -->
                <div class="game-controls">
                    <button id="clear-guess" class="btn clear-btn">Clear All</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Help Modal -->
    <div id="help-modal" class="modal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <h2>üß© How to Play Code Breaker</h2>
            <div class="help-content">
                <h3>üéØ Objective:</h3>
                <p>Crack the secret 4-color code in 10 attempts or less!</p>

                <h3>üé® How to Play:</h3>
                <ul>
                    <li><strong>Click</strong> any peg in the active row to open a color picker</li>
                    <li><strong>Click</strong> a color in the palette to fill the next empty position</li>
                    <li><strong>Submit</strong> your complete guess using the ‚úì button</li>
                    <li><strong>Undo</strong> mistakes with the ‚Ü∂ button or Ctrl+Z</li>
                </ul>

                <h3>üìä Feedback Guide:</h3>
                <ul>
                    <li>üî¥ <strong>Black Peg:</strong> Right color in the right position</li>
                    <li>‚ö™ <strong>White Peg:</strong> Right color in the wrong position</li>
                    <li>Empty holes mean those colors aren't in the code</li>
                </ul>

                <h3>‚å®Ô∏è Keyboard Shortcuts:</h3>
                <ul>
                    <li><strong>1-6</strong> - Quick select colors by number (1=Red, 2=Blue, 3=Yellow, 4=Green, 5=Cyan, 6=Purple)</li>
                    <li><strong>Ctrl+Z</strong> - Undo last action</li>
                    <li><strong>Enter</strong> - Submit guess (when complete)</li>
                    <li><strong>Escape</strong> - Clear current guess</li>
                    <li><strong>Backspace</strong> - Remove last color</li>
                    <li><strong>Space</strong> - Show this help dialog</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Celebration Modal -->
    <div id="celebration-modal" class="modal celebration-modal">
        <div class="modal-content celebration-content">
            <div class="fireworks-container"></div>
            <div class="celebration-message">
                <h1 id="celebration-title">üéâ Congratulations! üéâ</h1>
                <p id="celebration-text"></p>
                <button id="play-again-btn" class="btn submit-btn">Play Again</button>
            </div>
        </div>
    </div>

    <!-- Google AdSense: Bottom of Game Page -->
    <% if (typeof showAds !== 'undefined' && showAds === true) { %>
    <div style="text-align: center; margin: 20px auto; max-width: 750px; padding: 10px; background: rgba(255,255,255,0.9); border-radius: 8px;">
        <p style="color: #6c757d; margin-bottom: 5px; font-size: 12px;">Advertisement</p>
        <div style="min-height: 250px; display: flex; align-items: center; justify-content: center; background: #f8f9fa; border-radius: 4px;">
            <span style="color: #6c757d;">AdSense Ad Unit (Game Bottom)</span>
        </div>
    </div>
    <% } %>
    
    <footer style="text-align: center; padding: 20px; color: rgba(255, 255, 255, 0.7); font-size: 0.9em;">
        <p>Code Breaker - A logic puzzle game inspired by classic code-breaking board games</p>
    </footer>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Mastermind Game Script -->
    <script src="/games/mastermind/script.js"></script>

    <!-- Logout functionality -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const logoutLink = document.getElementById('logoutLink');
            if (logoutLink) {
                logoutLink.addEventListener('click', function(event) {
                    event.preventDefault();
                    const form = document.getElementById('logoutForm');
                    if (form) {
                        form.submit();
                    } else {
                        window.location.href = '/users/logout';
                    }
                });
            }
        });
    </script>
</body>
</html>
